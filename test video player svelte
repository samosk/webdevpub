<script>
	var video = document.querySelectorAll('video');

	video.forEach(play => play.addEventListener('click', () =>{
		play.classList.toggle('active');

		if(play.paused){
			play.play();
		}else{
			play.pause();
			play.currentTime = 0;
		}

	}));
</script>

<main>
	<div class="container">
		<div class="heading">Video Gallery

			<div class="video-container">

